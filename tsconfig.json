{
	"compilerOptions": {
	  "target": "es2020",
	  "lib": ["esnext"],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "strict": false,
	  "forceConsistentCasingInFileNames": true,
	  "esModuleInterop": true,
	  "module": "NodeNext",
	  "moduleResolution": "nodenext",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "baseUrl": ".",
	  "outDir": "dist"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["**/*.ts","**/*.mts"]
  }